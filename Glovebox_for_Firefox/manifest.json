{
	"manifest_version": 2,
	"name": "Glovebox",
	"description": "Encrypt and decrypt selected text.",
	"homepage_url": "https://github.com/lars0281/Glovebox_for_Firefox",
	"version": "0.8",
	"icons": {
		"48": "icons/beasts-48.png",
		"96": "icons/beasts-48.png"
	},
	"browser_specific_settings": {
        "gecko": {
            "id": "glb@glovebox.com",
            "strict_min_version": "63.0"
        }
    },
	
	"background": {
		"scripts": [
			"shorty.js",
			"crypto-js/core.js",
			"crypto-js/sha256.js",
			"background.js"
		]
	},
	"browser_action": {
		"default_icon": "icons/oie_24182624GhAKibDr.jpg",
		"theme_icons": [
			{
				"light": "icons/oie_24182624GhAKibDr.jpg",
				"dark": "icons/beasts-32.png",
				"size": 32
			}
		],
		"default_title": "Glovebox keys"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["./emojiMap.js","./background.js" ]
		}
	],
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"activeTab",
		"tabs",
		"contextMenus",
		"menus",
		"menus.overrideContext",
		"notifications",
		"clipboardRead",
		"clipboardWrite",
		"storage",
		"unlimitedStorage",
		"<all_urls>"
	]
}